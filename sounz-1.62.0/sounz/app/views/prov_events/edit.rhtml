<h1>Editing Event</h1>

<%= error_messages_for :prov_events %>

<% form_for(:prov_events, :url => prov_event_path(@prov_events), :html => { :method => :put }) do |f| %>
  <%=render :partial => "form", :locals => {:f => f}%>

  <p><b>Status:</b><br>
  <%= select("prov_events", "status_id", @statuses.to_dropdown) %></p>
  
  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>

<%= link_to 'Back to list', prov_events_path %>
