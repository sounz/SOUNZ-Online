<h1>Listing samples</h1>

<table>
  <tr>
  <% for column in Sample.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for sample in @samples %>
  <tr>
  <% for column in Sample.content_columns %>
    <td><%=h sample.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => sample %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => sample %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => sample }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @sample_pages.current.previous } if @sample_pages.current.previous %>
<%= link_to 'Next page', { :page => @sample_pages.current.next } if @sample_pages.current.next %> 

<br>

<%= link_to 'New sample', :action => 'new' %>
